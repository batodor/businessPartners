<core:FragmentDefinition xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:core="sap.ui.core" xmlns:custom="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
	<l:BlockLayout>
		<l:BlockLayoutRow>
			<l:BlockLayoutCell>
				<OverflowToolbar class="toolbar" width="100%">
					<Title text="{i18n>attachments}" titleStyle="H3"/>
					<ToolbarSpacer/>
					<Button id="uploadAdd" custom:id="upload" custom:upload="true" text="{i18n>add}" press="tableAdd"/>
					<Button id="uploadDelete" custom:id="upload" custom:upload="true" text="{i18n>delete}" press="tableDelete" type="Reject" enabled="false"/>
				</OverflowToolbar>
				<Table id="uploadTable" custom:id="upload" select="onTableSelect" mode="SingleSelectLeft" includeItemInSelection="true" width="100%" items="{}" 
					noDataText="{worklistView>/tableNoDataText}" busyIndicatorDelay="{worklistView>/tableBusyDelay}" growing="true" growingThreshold="5" growingScrollToLoad="false">
					<columns>
						<Column><Label class="black" text="{i18n>name}"/></Column>
						<Column hAlign="Center" width="100px"><Label class="black" text="{i18n>type}"/></Column>
						<Column hAlign="Center" width="100px"><Label class="black" text="{i18n>uploadDate}"/></Column>
					</columns>
					<items>
						<ColumnListItem>
							<cells>
								<Text text="{FileName}"/>
								<Text text="{DocType}"/>
								<Text text="{UploadDate}"/>
							</cells>
						</ColumnListItem>
					</items>
				</Table>
			</l:BlockLayoutCell>
		</l:BlockLayoutRow>
	</l:BlockLayout>
</core:FragmentDefinition>