<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core"
	xmlns:custom="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
	<Dialog title="Edit Compliance Risk" class="sapUiContentPadding">
		<content>
			<Text text="{i18n>type}" width="160px"/>
			<Select id="sRiskRiskType" items="{ path: '/DictionaryRiskTypeSet', sorter: { path: 'RiskType' } }" width="300px">
				<core:Item key="{RiskType}" text="{RiskType} - {RiskTypeName}"/>
			</Select>
			<ToolbarSpacer/>
			<!--<Text text="{i18n>itemNumber}" width="160px"/>-->
			<!--<Input id="iRiskItemNumber" width="300px"/>-->
			<ToolbarSpacer/>
			<Text text="{i18n>description}" width="160px"/>
			<TextArea id="taRiskDescription" width="300px"/>
			<ToolbarSpacer/>
			<Text text="{i18n>recommendedActions}" width="160px"/>
			<TextArea id="taRiskRecommended" width="300px"/>
			<ToolbarSpacer/>
			<Text text="{i18n>dateFrom}" width="160px"/>
			<DatePicker id="dpRiskDateFrom" width="300px"/>
			<ToolbarSpacer/>
			<Text text="{i18n>dateTo}" width="160px"/>
			<DatePicker id="dpRiskDateTo" width="300px"/>
			<ToolbarSpacer/>
			<Text text="{i18n>actual}" width="160px"/>
			<CheckBox id="cbRiskActual"/>
		</content>
		<buttons>
			<Button text="{i18n>cancel}" type="Back" custom:dialog="dRisk" press="closeDialog"/>
			<Button text="{i18n>edit}" visible="false" type="Accept" press="dialogEditRisk"/>
			<Button text="{i18n>add}" visible="false" type="Accept" press="dialogAddRisk"/>
		</buttons>
	</Dialog>
</core:FragmentDefinition>