<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:custom="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
	<Dialog title="{i18n>blacklist}" class="sapUiContentPadding" id="blacklistDialog">
		<content>
			<Text text="{i18n>blacklisted}" width="150px"/>
			<CheckBox selected="{BlackListed}"/>
			<ToolbarSpacer/>
			<Text text="{i18n>justification}" textAlign="Begin" width="150px"/>
			<TextArea value="{Justification}" width="460px" height="80px"/>
		</content>
		<buttons>
			<Button text="{i18n>cancel}" custom:id="blacklistDialog" type="Back" press="dialogClose"/>
			<Button text="{i18n>edit}" custom:id="blacklist" custom:create="true" custom:url="/ComplianceBlacklistedSet" 
				custom:expandUrl="/ToComplianceBlacklisted" type="Accept" press="dialogEdit"/>
		</buttons>
	</Dialog>
</core:FragmentDefinition>