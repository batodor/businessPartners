<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:u="sap.ui.unified" 
	xmlns:custom="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
	<Dialog title="Edit Proxy" class="sapUiContentPadding" id="proxyDialog">
		<content>
			<Label required="true" text="{i18n>name}" width="150px"/>
			<Input custom:key="{i18n>name}" value="{Name}" width="300px"/>
			<ToolbarSpacer/>
			<Label required="true" text="{i18n>surname}" width="150px"/>
			<Input custom:key="{i18n>surname}" value="{Surname}" width="300px"/>
			<ToolbarSpacer/>
			<Label text="{i18n>position}" width="150px"/>
			<Input value="{Position}" width="300px"/>
			<ToolbarSpacer/>
			<Label text="{i18n>proxyType}" width="150px"/>
			<Select forceSelection="false" selectedKey="{ProxyType}" width="300px" items="{ path: '/DictionaryProxyTypeSet' }">
				<core:Item key="{ProxyType}" text="{ProxyType} - {ProxyTypeName}"/>
			</Select>
			<ToolbarSpacer/>
			<Label text="{i18n>signType}" width="150px"/>
			<Select forceSelection="false" selectedKey="{SignType}" width="300px" items="{ path: '/DictionarySignTypeSet' }">
				<core:Item key="{SignType}" text="{SignType} - {SignTypeName}"/>
			</Select>
			<ToolbarSpacer/>
			<Label text="{i18n>comment}" width="150px"/>
			<TextArea value="{Comment}" width="300px"/>
			<!--<Input value="{ContactName}" custom:value="" visible="false" />-->
			<ToolbarSpacer/>
			<Label text="{i18n>file}" width="150px"/>
			<u:FileUploader name="uploadProxy" useMultipart="false" id="uploadProxy" uploadOnChange="false" custom:id="proxy" sendXHR="true" uploadUrl="{upload>/uploadUrl}" 
				tooltip="Upload your file to the local server" change="onFileChange" uploadComplete="onFileUploaded" style="Emphasized" width="300px">
				<u:headerParameters>
					<u:FileUploaderParameter name="slug" value="{upload>/fileName}"/>
					<u:FileUploaderParameter name="x-csrf-token" value="{upload>/token}"/>
				</u:headerParameters>
			</u:FileUploader>
			<ToolbarSpacer/>
			<Label text="" width="150px"/>
			<List items="{ path: 'ToAttachmentProxy', templateShareable:false }" class="attachmentsListDialog" showNoData="false" width="300px">
				<CustomListItem>
					<HBox justifyContent="SpaceBetween" alignItems="Center">
						<Label text="{ path: 'FileName', formatter: '.formatter.getFileName' }" />
						<Button icon="sap-icon://download" press="downloadAttachmentButton" />
						<Button icon="sap-icon://delete" custom:id="proxyDialog" press="deleteAttachmentButton" />
					</HBox>
				</CustomListItem>
			</List>
		</content>
		<buttons>
			<Button text="{i18n>cancel}" type="Back" custom:id="proxyDialog" press="dialogClose"/>
			<Button text="{i18n>save}" id="proxySaveBtnG" custom:upload="uploadProxy" custom:uploadUrl="/ToAttachmentProxy" visible="false" 
				custom:id="proxy" type="Accept" press="dialogEdit"/>
			<Button text="{i18n>save}" id="proxyBtnG" custom:upload="uploadProxy" custom:uploadUrl="/ToAttachmentProxy" visible="false" 
				custom:id="proxy" custom:url="/GovernmentProxySet" type="Accept" press="dialogAdd"/>
		</buttons>
	</Dialog>
</core:FragmentDefinition>