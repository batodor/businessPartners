<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:u="sap.ui.unified" 
	xmlns:custom="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
	<Dialog title="{i18n>attachments}" class="sapUiContentPadding" id="uploadDialog">
		<content>
			<Text text="{i18n>type}" width="100px"/>
			<Select forceSelection="false" change="onTypeSelect" width="200px" custom:id="upload"
				items="{ path: '/DictionaryDocTypeSet', sorter: { path: 'DocType' } }">
				<core:Item key="{DocType}" text="{DocType} - {Description}"/>
			</Select>
			<ToolbarSpacer/>
			<Text text="{i18n>file}" width="100px"/>
			<u:FileUploader id="upload" useMultipart="false" uploadOnChange="false" custom:id="upload" sendXHR="true" uploadUrl="{upload>/uploadUrl}" 
				tooltip="Upload your file to the local server" change="onFileChange" uploadComplete="onFileUploaded" style="Emphasized" width="200px">
				<u:headerParameters>
					<u:FileUploaderParameter name="slug" value="{upload>/fileName}"/>
					<u:FileUploaderParameter name="fileType" value="{upload>/fileType}"/>
					<u:FileUploaderParameter name="x-csrf-token" value="{upload>/token}"/>
				</u:headerParameters>
			</u:FileUploader>
		</content>
		<buttons>
			<Button text="{i18n>cancel}" type="Back" custom:id="uploadDialog" press="dialogClose"/>
			<Button text="{i18n>edit}" visible="false" custom:id="upload" type="Accept" press="dialogEdit"/>
			<Button text="{i18n>uploadFile}" visible="false" enabled="false" id="uploadButton" custom:id="upload" type="Accept" press="dialogUpload"/>
		</buttons>
	</Dialog>
</core:FragmentDefinition>