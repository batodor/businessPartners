<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core"
	xmlns:custom="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
	<Dialog title="{i18n>insureInformation}" class="sapUiContentPadding">
		<content>
			<Text text="{i18n>amountOfInsuredReceivables}" width="250px"/>
			<Input id="iInsuranceReceivables" width="167px" class="margin-right"/>
			<Select id="sInsuranceCurrency" items="{ path: '/DictionaryCurrencySet', sorter: { path: 'Currency' } }" width="80px">
				<core:Item key="{Currency}" text="{Currency}"/>
			</Select>
			<ToolbarSpacer/>
			<Text text="{i18n>insurancePremiumRatePercent}" width="250px"/>
			<Input id="iInsuranceRate" width="167px" class="margin-right"/>
			<Input value="%" id="iInsuranceUnit" width="80px" editable="false"/>
			<ToolbarSpacer/>
			<Text text="{i18n>contactNumber}" width="250px"/>
			<Input id="iInsuranceContract" width="255px"/>
			<ToolbarSpacer/>
			<Text text="{i18n>validityDate}" width="250px"/>
			<DatePicker id="dInsuranceValidityDate" width="260px" class="sapUiSmallMarginBottom"/>
		</content>
		<buttons>
			<Button text="{i18n>cancel}" type="Back" custom:id="insuranceInformationDialog" press="dialogClose"/>
			<Button text="{i18n>update}" type="Accept" press="updateInsurance"/>
		</buttons>
	</Dialog>
</core:FragmentDefinition>